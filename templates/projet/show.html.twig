{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="section">
            <h1>Gestion des projets</h1>
        </div>
        <div class="section">
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>#</th>
                        <td>{{ projet.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ projet.titre }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ projet.description }}</td>
                    </tr>
                    <tr>
                        <th>Responsable</th>
                        <td>{{ projet.responsable }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ projet.prix }}</td>
                    </tr>
                    <tr>
                        <th>Avance</th>
                        <td>{{ projet.avance }}</td>
                    </tr>
                    <tr>
                        <th>Service</th>
                        <td>{{ projet.service }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="section">
            
            <div class="btn btn-sm btn-dark">
                <a href="{{ path('projet_edit', {'id': projet.id}) }}">Modifier</a>
            </div>
            
            <div class="btn btn-sm btn-dark">
                <a href="{{ path('projet_index') }}">Retourner Ã  la liste</a>
            </div>

            {{ include('projet/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
