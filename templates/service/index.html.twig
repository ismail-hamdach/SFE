{% extends 'base.html.twig' %}

{% block title %}G. Services{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row section">
            <div class="col-sm-6">
                <h1>Gestion des services</h1>
            </div>
            <div class="col-sm-6 d-flex justify-content-end">
                <div class="btn btn-dark"> <a href="{{ path('service_new') }}">Ajouter <i class="fas fa-plus-circle"></i></a></div>
            </div>
        </div>
        
        <div class="section d-flex justify-content-start">
                {{ include('service/_searchForm.html.twig') }}
        </div>

        <div class="row section">
            <div class="table-responsive">
                <table class="table table-striped table-hover w-auto">
                    <thead class="thead-dark">
                        <tr>
                            <th class="th-lg" scope="row">#</th>
                            <th class="th-lg" scope="row">Titre</th>
                            <th>GÃ©rant</th>
                            <th class="th-lg" scope="row">actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for service in services %}
                        <tr>
                            <td scope="row">{{ service.id }}</td>
                            <td>{{ service.titre }}</td>
                            <td>{{ service.gerant }}</td>
                            <td>
                                <div class="iconOnWhite">
                                    <a href="{{ path('service_show', {'id': service.id}) }}" data-toggle="popover" title="Afficher" ><i class="fas fa-search"> </i></a>
                                    <a href="{{ path('service_edit', {'id': service.id}) }}" data-toggle="popover" title="Modifier" ><i class="fas fa-edit"> </i></a>
                                </div>
                            </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Vide</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

{% endblock %}
