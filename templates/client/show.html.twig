{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="section">
            <h1>Gestion des clients</h1>
        </div>
        <div class="section">
            <table class="table table-striped table-hover">
                <tbody>
                {% if user %}
                    <tr>
                        <th>#</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Service</th>
                        <td>{{ user.service }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="section">
            
            <div class="btn btn-sm btn-dark">
                <a href="{{ path('client_edit', {'id': user.id}) }}">Modifier</a>
            </div>
            
            <div class="btn btn-sm btn-dark">
                <a href="{{ path('client_index') }}">Retourner à la liste</a>
            </div>

            {{ include('user/_delete_form.html.twig') }}
        </div>
        {% else %}
                    <tr>
                        <td colspan="6">Aucun reslutat trouvé</td>
                    </tr>
                </tbody>
            </table>
        </div>
         <div class="section">
            
            <div class="btn btn-sm btn-dark">
                <a href="{{ path('client_index') }}">Retourner à la liste</a>
            </div>

        </div>
        {% endif %}
    </div>
{% endblock %}
