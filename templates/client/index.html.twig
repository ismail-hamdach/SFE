{% extends 'base.html.twig' %}

{% block title %}G. Clients{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row section">
            <div class="col-sm-6">
                <h1>Gestion des clients</h1>
            </div>
            <div class="col-sm-6 d-flex justify-content-end">
                <div class="btn btn-dark"> <a href="{{ path('client_new') }}">Ajouter <i class="fas fa-plus-circle"></i></a></div>
            </div>
        </div>
        <div class="row section">
            <div class="table-responsive">
                <table class="table table-striped table-hover w-auto">
                    <thead class="thead-dark">
                        <tr>
                            <th class="th-lg" scope="row">#</th>
                            <th class="th-lg" scope="row">Email</th>
                            <th class="th-lg" scope="row">Nom</th>
                            <th class="th-lg" scope="row">Prenom</th>
                            <th class="th-lg" scope="row">Service</th>
                            <th class="th-lg" scope="row"></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.email }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.service }}</td>
                            <td>
                                <div class="iconOnWhite">
                                    <a href="{{ path('client_show', {'id': user.id}) }}" data-toggle="popover" title="Afficher" ><i class="fas fa-search"> </i></a>
                                    <a href="{{ path('client_edit', {'id': user.id}) }}" data-toggle="popover" title="Modifier" ><i class="fas fa-edit"> </i></a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Vide</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
{% endblock %}
