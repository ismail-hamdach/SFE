{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="section">
            <h1>Gestion des utilisateurs</h1>
        </div>
        <div class="section">
            <table class="table table-striped table-hover">
                {% if user %}
                <tbody>
                    <tr>
                        <th>#</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ user.roles[0] == "ROLE_ADMIN" ? 'Administration' : (user.roles[0] == "ROLE_GERANT" ? 'Gérant' : (user.roles[0] == 'ROLE_EMPLOYE' ? 'Employé' : 'Erreur'))}}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Service</th>
                        <td>{{ user.service }}</td>
                    </tr>
                </tbody>
                
            </table>
        </div>
        <div class="section">
            
            <div class="btn btn-sm btn-dark">
                <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
            </div>
            
            <div class="btn btn-sm btn-dark">
                <a href="{{ path('user_index') }}">Retourner à la liste</a>
            </div>

            {{ include('user/_delete_form.html.twig') }}
        </div>
        {% else %}
                <tr>
                    <td colspan="7">Aucun resultat trouvé</td>
                </tr>
             </tbody>
                
            </table>
        </div>
        <div class="section">
            
            <div class="btn btn-sm btn-dark">
                <a href="{{ path('user_index') }}">Retourner à la liste</a>
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}
